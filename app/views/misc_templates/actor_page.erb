<h1> Actor #<%=@actor_id%> details</h1>
<a href="/actors">Go back</a>
<hr>

<dl>
<%@actor=Actor.where({:id => @actor_id}).first%>
<dt>Name</dt>
  <dd><%=@actor.name%></dd>
<dt>Dob</dt>
  <dd><%=@actor.dob%></dd>
<dt>Bio</dt>
  <dd><%=@actor.bio%></dd>
<dt>Image</dt>
  <dd><img src="<%=@actor.image%>"style="width:250px;"></dd>
<dt>Created at</dt>
  <dd><%=@actor.created_at%></dd>
<dt>Updated at</dt>
  <dd><%=@actor.updated_at%></dd>
</dl>


<hr>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th> </th>
  </tr>


<%@filmography.each do |film|%>
  <tr>
    <td><%=Movie.where({:id => film.movie_id}).first.title%></td>
    <td><%=Movie.where({:id => film.movie_id}).first.year%></td>
    <%@director_id=Movie.where({:id => film.movie_id}).first.director_id%>
    <td><%=Director.where({:id => @director_id}).first.name%></td>
    <td><%=film.name%></td>
    <%@movie_id=film.movie_id%>
    <td><a href="/movies/<%=@movie_id%>">Show details</a></td>
  </tr>
  <%end%>
</table>
