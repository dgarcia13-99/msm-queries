<h1>List of all movies</h1>
<hr>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th> </th>
  </tr>

 <%@movie_array.each do |movie|%>
  <tr>
      <td><%=@movie_id=movie.id%></td>
      <td><img src="<%=@movie_image=movie.image%>" style="width:250px;"></td>
      
      <td><%=@movie_title=movie.title%></td>
      <td><%=@movie_year=movie.year%></td>
      <%@movie_director_id=movie.director_id%>
      <%@movie_director_name=Director.where({:id => @movie_director_id}).first.name%>
      <td><%=@movie_director_name%></td>
      <td><a href="/movies/<%=@movie_id%>">Show details</a></td>
    </tr>
  <%end%>
  
</table>
